@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Year-to-Date Donations";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Transaction Name</th>
            <th>Donation Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("MMMM dd, yyyy")</td>
                <td>@item.FullName</td>
                <td>@item.Name</td>
                <td>@String.Format("{0:C}", item.Amount)</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right"><strong>Total Donations :</strong></td>
            <td><strong>@String.Format("{0:C}", Model.Sum(item => (float)item.Amount))</strong></td>
        </tr>
    </tfoot>
</table>

<div class="mt-2">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>